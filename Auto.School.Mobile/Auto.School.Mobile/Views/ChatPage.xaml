<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Auto.School.Mobile.Views.ChatPage"
             Title="ChatPage"
             xmlns:extension="clr-namespace:Auto.School.Mobile.Extension">
    <StackLayout>
        <Label Text="No messages" IsVisible="{Binding IsChatNotHasMessages}"/>
        <CollectionView x:Name="MessagesCollectionView" ItemsSource="{Binding Messages}" IsVisible="{Binding IsChatHasMessages}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding Text}" />
                        <Label Text="{Binding SendingTime}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Entry x:Name="MessageEntry" Placeholder="Type a message" Text="{Binding MessageText}"/>
        <Button Text="Send" Command="{Binding SendMessageCommand}" />
    </StackLayout>
</ContentPage>