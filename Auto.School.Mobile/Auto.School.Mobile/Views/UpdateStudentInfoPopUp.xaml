<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Auto.School.Mobile.Views.UpdateStudentInfoPopUp"
             xmlns:resx="clr-namespace:Auto.School.Mobile.Resources.Strings"
             xmlns:extension="clr-namespace:Auto.School.Mobile.Extension">
    <toolkit:Popup.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,5" />
            <Setter Property="HorizontalOptions" Value="StartAndExpand"/>
        </Style>
    </toolkit:Popup.Resources>
    <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="White">
        <Label Text="{extension:Translate Key=UpdateStudent_Title}" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" />
        <StackLayout Grid.Row="1">
            <Frame CornerRadius="0" Padding="0" Margin="50,0,50,0" HorizontalOptions="Center" BorderColor="#F5F5F5">
                <Image Source="register_backgr.png" />
            </Frame>
        </StackLayout>
        <StackLayout Padding="20,0">
            <Label Text="{extension:Translate Key=FirstName}" Margin="0,5,0,5" FontSize="Medium" FontAttributes="Bold" TextColor="#3D6DFF"/>
            <Entry FontSize="Medium"  PlaceholderColor="#333333" Placeholder="{extension:Translate Key=Registration_EnterFirstName}" Text="{Binding FirstName}" />
        </StackLayout>
        <StackLayout Padding="20,0">
            <Label  Text="{extension:Translate Key=LastName}"  Margin="0,5,0,5" FontSize="Medium" FontAttributes="Bold" TextColor="#3D6DFF"/>
            <Entry FontSize="Medium"  PlaceholderColor="#333333" Placeholder="{extension:Translate Key=Registration_EnterLastName}" Text="{Binding LastName}" />
        </StackLayout>
        <StackLayout Padding="20,0">
            <Label Text="{extension:Translate Key=Registration_PhoneLabel}"  Margin="0,5,0,5" FontSize="Medium" FontAttributes="Bold" TextColor="#3D6DFF"/>
            <Entry FontSize="Medium" PlaceholderColor="#333333" Placeholder="XXX-XXX-XXXX" Text="{Binding PhoneNumber}"/>
            <StackLayout BackgroundColor="White" IsVisible="{Binding IsPhoneNumberError}">
                <Label Text="{Binding PhoneNumberErrorMessage}" TextColor="Red" Margin="0,5,0,10" FontSize="Small" VerticalTextAlignment="Center" HorizontalTextAlignment="Start"/>
            </StackLayout>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Padding="20,0">
            <Label Text="{extension:Translate Key=BirthdayDate}"  Margin="0,0,20,0" VerticalOptions="Center" VerticalTextAlignment="Center" FontSize="Medium" FontAttributes="Bold" TextColor="#3D6DFF"/>
            <DatePicker FontSize="18" TextColor="#333333" Date="{Binding BirthdayDate}" HorizontalOptions="End"/>
        </StackLayout>
        <StackLayout BackgroundColor="White" IsVisible="{Binding IsBirthDateError}" Padding="20,0">
            <Label Text="{Binding BirthDateErrorMessage}" TextColor="Red" Margin="0,5,0,10" FontSize="Small" LineBreakMode="WordWrap"/>
        </StackLayout>
        <StackLayout Padding="20,0">
            <Picker FontSize="Medium" Title="{extension:Translate Key=SelectCity}" TitleColor="#3D6DFF" FontAttributes="Bold" SelectedItem="{Binding SelectedCity}" ItemsSource="{Binding Cities}">
                <Picker.ItemDisplayBinding>
                    <Binding Path="Name" />
                </Picker.ItemDisplayBinding>
            </Picker>
        </StackLayout>
        <StackLayout Padding="20,0">
            <Picker FontSize="Medium" Title="{extension:Translate Key=Registration_DrivingCaregoryLabel}" TitleColor="#3D6DFF" FontAttributes="Bold" SelectedItem="{Binding SelectedDrivingCategory}" ItemsSource="{Binding DrivingCategories}">
                <Picker.ItemDisplayBinding>
                    <Binding />
                </Picker.ItemDisplayBinding>
            </Picker>
        </StackLayout>
        <HorizontalStackLayout Spacing="10" HorizontalOptions="CenterAndExpand">
            <Button Text="{extension:Translate Key=UpdatePassword_CancelButton}" MinimumWidthRequest="150" Command="{Binding CancelCommand}" BackgroundColor="#F5F5F5" TextColor="#333333" FontAttributes="Bold" FontSize="Medium">
                <Button.Shadow>
                    <Shadow Brush="Black" Opacity="0.5" Offset="10,10" />
                </Button.Shadow>
            </Button>
            <Button Text="{extension:Translate Key=UpdatePassword_UpdateButton}" MinimumWidthRequest="150" Command="{Binding UpdateInfoCommand}" BackgroundColor="#f4e558" TextColor="#003580" FontAttributes="Bold" FontSize="Medium">
                <Button.Shadow>
                    <Shadow Brush="Black" Opacity="0.5" Offset="10,10" />
                </Button.Shadow>
            </Button>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
