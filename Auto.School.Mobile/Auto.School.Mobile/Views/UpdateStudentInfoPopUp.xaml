<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Auto.School.Mobile.Views.UpdateStudentInfoPopUp">
    <toolkit:Popup.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="#f4e558" />
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,5" />
            <Setter Property="HorizontalOptions" Value="StartAndExpand"/>
        </Style>
    </toolkit:Popup.Resources>
    <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="#F5F5F5">
        <Label Text="Update Password" FontAttributes="Bold" FontSize="Medium" HorizontalOptions="Center" />
        <Entry Placeholder="Old Password" IsPassword="True" Text="{Binding OldPassword}" />
        <Entry Placeholder="New Password" IsPassword="True" Text="{Binding NewPassword}" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}" />
        <HorizontalStackLayout Spacing="10">
            <Button Text="Cancel" Command="{Binding CancelCommand}" />
            <Button Text="Update" Command="{Binding UpdatePasswordCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
