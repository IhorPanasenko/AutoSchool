<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:Auto.School.Mobile.Resources.Strings"
             x:Class="Auto.School.Mobile.UserControl.FlyoutHeaderControl"
             xmlns:extension="clr-namespace:Auto.School.Mobile.Extension">
    <StackLayout Padding="10" BackgroundColor="#3D6DFF">
        <StackLayout Orientation="Horizontal" Spacing="3">
            <Label Text="{extension:Translate Key=FlyoutHeader_Hello}" TextColor="White" FontSize="Medium"/>
            <Label x:Name="lblUserName" FontAttributes="Bold" TextColor="White" FontSize="Medium"/>
            <Label x:Name="lblUserEmail" FontAttributes="Bold" TextColor="White" FontSize="Medium"/>
        </StackLayout>
        <Picker x:Name="languagePicker" Title="{extension:Translate Key=FlyoutHeader_ChooseLanguage}" SelectedIndexChanged="OnLanguageSelected" TextColor="White" FontAttributes="Bold" FontSize="Small"/>
    </StackLayout>
</ContentView>
