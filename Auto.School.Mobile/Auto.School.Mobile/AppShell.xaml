<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Auto.School.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Auto.School.Mobile.Views"
    xmlns:instructorViews="clr-namespace:Auto.School.Mobile.Views.Instructor"
    xmlns:resx="clr-namespace:Auto.School.Mobile.Resources.Strings"
    Shell.TabBarIsVisible="False"
    Shell.TitleColor="#f4e558"
    Shell.BackgroundColor="#3D6DFF"
    xmlns:extension="clr-namespace:Auto.School.Mobile.Extension">


    <ShellContent ContentTemplate="{DataTemplate views:LoginPage}"
                      FlyoutItemIsVisible="False"
                      xmlns:resx="clr-namespace:Auto.School.Mobile.Resources.Strings"
                      />

    <FlyoutItem x:Name="StudentMenu" Route="StudentProfile" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="{extension:Translate Key=Shell_Profile}" ContentTemplate="{DataTemplate views:StudentProfile}" />
        <ShellContent Title="{extension:Translate Key=Shell_AllInstructors}" ContentTemplate="{DataTemplate views:AllInstructorsPage}" />
        <ShellContent Title="{extension:Translate Key=Shell_MyInstructor}" ContentTemplate="{DataTemplate views:InstructorDetailsPage}" />
        <ShellContent Title="{extension:Translate Key=Shell_MyLessons}" ContentTemplate="{DataTemplate views:StudentMyLessonsPage}" />
        <ShellContent Title="{extension:Translate Key=Shell_MyScheduleStudent}" ContentTemplate="{DataTemplate views:InstructorScheduleStudentPage}" />
        <ShellContent Title="{extension:Translate Key=Shell_StudentChatMenuItem}" ContentTemplate="{DataTemplate views:ChatPage}" />
    </FlyoutItem>

    <FlyoutItem x:Name="InstructorMenu" Route="InstructorProfilePage" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="{extension:Translate Key=Shell_Profile}" ContentTemplate="{DataTemplate instructorViews:InstructorProfilePage}" />
        <ShellContent Title="{extension:Translate Key=Shell_AllInstructors}" ContentTemplate="{DataTemplate instructorViews:InstructorAllInstructorsPage}" />
        <ShellContent Title="{extension:Translate Key=Shell_MyScheduleInstructor}" ContentTemplate="{DataTemplate instructorViews:InstructorMySchedulePage}" />
        <ShellContent Title="{extension:Translate Key=Shell_StudentChatMenuItem}" ContentTemplate="{DataTemplate views:ChatPage}" />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <StackLayout>
            <Button Margin="10,20" Text="{extension:Translate Key=SignOut}" Command="{Binding SignOutCommand}" BackgroundColor="#333333" TextColor="#f4e558"/>
        </StackLayout>
    </Shell.FlyoutFooter>
</Shell>
    